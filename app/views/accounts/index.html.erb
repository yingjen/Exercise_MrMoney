<% @grouped_months.keys.sort.each do |month| %>
 <h2><%= month.strftime("%B %Y") %></h2>
<table class="table table-striped">
  <thead>
    <tr>
      <th>購買日期</th>
      <th>購買項目</th>
      <th>項目金額</th>
      <th>備註</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
    <tbody>
      <% @total = 0 %>
      <% for account in @grouped_months[month] %> 
        <tr>
          <td><%= account.buyday.to_s(:long) %></td>
          <td><%= account.title %></td>
          <td><%= account.dollar.to_s(:long) %></td>
          <% @total= @total + account.dollar.to_i %>
        </tr>
      <% end %> 
    </tbody>
  
    <tbody>
      <tr>
        <td></td>
        <td>總計：</td>
        <td colspan="3"><%= @total %></td>
      </tr>
    </tbody>
  </table>
<% end %>
