<h1>帳目表</h1>
<h2>Mar 2015</h2>

<div role="tabpanel">

  <!-- Nav tabs -->
  <ul class="nav nav-tabs" role="tablist" id="myTab">
    <li><%= link_to 'Home', accounts_path %></li>
    <li><%= link_to 'New', new_account_path %></li>
    <li ><a href="jan">Jan</a></li>
    <li ><a href="feb">Feb</a></li>
    <li class="active" ><a href="mar">Mar</a></li>
    <li ><a href="apr">Apr</a></li>
    <li ><a href="may">May</a></li>
  </ul>

  <!-- Tab panes -->
</div>


  <table class="table table-striped">
    <thead>
      <tr>
        <th>購買日期</th>
        <th>購買項目</th>
        <th>項目金額</th>
        <th>備註</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @total = 0 %>
      <% @mar.each do |account| %> 
        <tr>
          <td><%= account.buyday.to_s(:long) %></td>
          <td><%= account.title %></td>
          <td><%= account.dollar.to_s(:long) %></td>
          <td><%= link_to 'Show', account %></td>
          <td><%= link_to 'Edit', edit_account_path(account) %></td>
          <td><%= link_to 'Destroy', account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      
          <% @total= @total + account.dollar.to_i %>
        </tr>
      <% end %> 
    </tbody>
  
    <tbody>
      <tr>
        <td></td>
        <td>總計：</td>
        <td colspan="3"><%= @total %></td>
      </tr>
    </tbody>
    
    <tbody>
  </table>
